{
  "name": "memfault-hid-nodejs-example",
  "version": "1.0.0",
  "description": "Node.js example using Memfault HID library via N-API",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "install": "node-gyp rebuild && npm run copy-js",
    "build": "node-gyp rebuild && npm run copy-js",
    "copy-js": "mkdir -p build && cp index.js mds-native.js build/",
    "start": "node build/index.js",
    "dev": "node index.js",
    "build:lib": "cd ../.. && cmake -B build -DBUILD_SHARED_LIBS=ON && cmake --build build",
    "clean": "rm -rf build node_modules"
  },
  "keywords": [
    "memfault",
    "hid",
    "napi",
    "diagnostics"
  ],
  "author": "Memfault",
  "license": "MIT",
  "dependencies": {
    "node-hid": "^3.1.0"
  },
  "devDependencies": {
    "node-gyp": "^10.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "gypfile": true
}
