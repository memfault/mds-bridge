    "hid",
    "ffi",
    "diagnostics"
  ],
  "author": "Memfault",
  "license": "MIT",
  "dependencies": {
    "node-hid": "^3.1.0",
    "ffi-napi": "^4.0.3",
    "ref-napi": "^3.0.3",
    "ref-struct-napi": "^1.1.1",
    "ref-array-napi": "^1.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
