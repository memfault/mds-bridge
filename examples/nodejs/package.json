  "description": "Node.js example using Memfault HID library via FFI",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "build:lib": "cd ../.. && cmake -B build -DBUILD_SHARED_LIBS=ON && cmake --build build"
  },
